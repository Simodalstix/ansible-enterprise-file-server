[libdefaults]
    default_realm = {{ ad_domain.upper() }}
    dns_lookup_realm = false
    dns_lookup_kdc = true
    ticket_lifetime = 24h
    renew_lifetime = 7d
    forwardable = true

[realms]
    {{ ad_domain.upper() }} = {
        kdc = {{ ad_server }}
        admin_server = {{ ad_server }}
    }

[domain_realm]
    .{{ ad_domain }} = {{ ad_domain.upper() }}
    {{ ad_domain }} = {{ ad_domain.upper() }}